@page
@model AplicatieStudenti.Pages.Studenti.DeleteModel

@{
    ViewData["Title"] = "Stergere student";
}

<h1>Stergere student</h1>

<h3>Esti sigur ca vrei sa stergi aceasta inregistrare?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Prenume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.DataNasterii)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.DataNasterii)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Student.ID" />
        <input type="submit" value="Sterge" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary ms-2">Inapoi la lista de cursuri</a>
    </form>
</div>

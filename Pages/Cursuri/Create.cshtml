@page
@model AplicatieStudenti.Pages.Cursuri.CreateModel
@{
    ViewData["Title"] = "Adauga curs";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="NumeCurs">Nume Curs</label>
        <input type="text" id="NumeCurs" class="form-control" asp-for="Curs.NumeCurs" />
        <span asp-validation-for="Curs.NumeCurs" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Descriere">Descriere</label>
        <input type="text" id="Descriere" class="form-control" asp-for="Curs.Descriere" />
        <span asp-validation-for="Curs.Descriere" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Adauga curs</button>
</form>

<a asp-page="./Index">Inapoi la lista de cursuri</a>

@page
@model AplicatieStudenti.Pages.Cursuri.CreateModel
@{
    ViewData["Title"] = "Adauga curs";
}
<h1>@ViewData["Title"]</h1>

<!-- Form pentru adaugarea unui nou curs -->
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <!-- Afisarea erorilor de validare pentru model -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Curs.NumeCurs" class="control-label">Nume curs</label>
                <input asp-for="Curs.NumeCurs" class="form-control" />
                <span asp-validation-for="Curs.NumeCurs" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Curs.Descriere" class="control-label">Descriere</label>
                <input asp-for="Curs.Descriere" class="form-control" />
                <span asp-validation-for="Curs.Descriere" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Adauga curs</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Inapoi la lista de cursuri</a>
</div>

<!-- Scripturi de validare -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    console.log('Formularul nu este valid');
                }
            });
        });
    </script>
}
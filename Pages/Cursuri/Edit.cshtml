@page
@model AplicatieStudenti.Pages.Cursuri.EditModel

@{
    ViewData["Title"] = "Editare";
}

<h1>Editare curs</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Curs.ID" />
            <div class="form-group">

                <label asp-for="Curs.NumeCurs" class="control-label"></label>
                <input asp-for="Curs.NumeCurs" class="form-control" />
                <span asp-validation-for="Curs.NumeCurs" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Curs.Descriere" class="control-label"></label>
                <input asp-for="Curs.Descriere" class="form-control" />
                <span asp-validation-for="Curs.Descriere" class="text-danger"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Salveaza modificarile</button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">Inapoi la lista de cursuri</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    console.log('Formularul nu este valid');
                }
            });
        });
    </script>
}

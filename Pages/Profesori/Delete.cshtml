@page
@model AplicatieStudenti.Pages.Profesori.DeleteModel

@{
    ViewData["Title"] = "Stergere profesor";
}

<h1>Stergere profesor</h1>

<h3>Esti sigur ca vrei sa stergi aceasta inregistrare?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Profesor.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profesor.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Profesor.Prenume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profesor.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Profesor.Specializare)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profesor.Specializare)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Profesor.ID" />
        <input type="submit" value="Sterge" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary ms-2">Inapoi la lista de profesori</a>
    </form>
</div>

@page
@model AplicatieStudenti.Pages.Profesori.EditModel
@{
    ViewData["Title"] = "Editare profesor";
}

<h1>@ViewData["Title"]</h1>


<hr />

<form method="post">
    <input type="hidden" asp-for="Profesor.ID" />

    <div class="form-group">
        <label asp-for="Profesor.Nume" class="control-label">Nume</label>
        <input asp-for="Profesor.Nume" class="form-control" />
        <span asp-validation-for="Profesor.Nume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Profesor.Prenume" class="control-label">Prenume</label>
        <input asp-for="Profesor.Prenume" class="form-control" />
        <span asp-validation-for="Profesor.Prenume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Profesor.Specializare" class="control-label">Specializare</label>
        <input asp-for="Profesor.Specializare" class="form-control" />
        <span asp-validation-for="Profesor.Specializare" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Cursuri predate</label>
        <select asp-for="SelectedCursuri" class="form-control" asp-items="Model.CursuriSelectList" multiple>
        </select>
        <small class="form-text text-muted">Apasa CTRL pentru a selecta mai multe cursuri</small>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salveaza modificarile</button>
        <a asp-page="./Index" class="btn btn-secondary">Inapoi la lista de profesori</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

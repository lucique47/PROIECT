@page
@model AplicatieStudenti.Pages.Inscrieri.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalii</h1>

<div>
    <h4>Inscriere</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscriere.Student)
        </dt>
        <dd class="col-sm-10">
            @(Model.Inscriere.Student != null ? Model.Inscriere.Student.ID.ToString() : "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscriere.Curs)
        </dt>
        <dd class="col-sm-10">
            @(Model.Inscriere.Curs?.ID.ToString() ?? "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscriere.Profesor)
        </dt>
        <dd class="col-sm-10">
            @(Model.Inscriere.Profesor != null ? Model.Inscriere.Profesor.ID.ToString() : "N/A")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Inscriere.ID" class="btn btn-primary btn-warning">Editare</a> |
    <a asp-page="./Index" class="btn btn-secondary ms-2">Inapoi la lista de inscrieri</a>
</div>

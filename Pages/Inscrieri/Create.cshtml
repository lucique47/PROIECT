@page
@model AplicatieStudenti.Pages.Inscrieri.CreateModel
@{
    ViewData["Title"] = "Inscriere noua";
}

<h1>Inscriere noua</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Inscriere.StudentID" class="control-label"></label>
        <select asp-for="Inscriere.StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
    </div>
    <div class="form-group">
        <label asp-for="Inscriere.CursID" class="control-label"></label>
        <select asp-for="Inscriere.CursID" class="form-control" asp-items="ViewBag.CursID"></select>
    </div>
    <div class="form-group">
        <label asp-for="Inscriere.ProfesorID" class="control-label"></label>
        <select asp-for="Inscriere.ProfesorID" class="form-control" asp-items="ViewBag.ProfesorID"></select>
    </div>
    <button type="submit" class="btn btn-primary">Salveaza</button>
</form>

<a asp-page="./Index">Inapoi la lista de inscrieri</a>
@page
@model AplicatieStudenti.Pages.Inscrieri.IndexModel
@{
    ViewData["Title"] = "Lista de inscriere";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Adauga o noua inscriere</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Student</th>
            <th>Curs</th>
            <th>Profesor</th>
            <th>Actiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Inscriere)
        {
            <tr>
                <td>@item.ID</td>
                <td>@(item.Student?.Nume ?? "N/A") @(item.Student?.Prenume ?? "N/A")</td>
                <td>@(item.Curs?.NumeCurs ?? "N/A")</td>
                <td>@(item.Profesor?.Nume ?? "N/A") @(item.Profesor?.Prenume ?? "N/A")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.ID" class="btn btn-warning">Editeaza</a>
                    <a asp-page="Delete" asp-route-id="@item.ID" class="btn btn-danger">Sterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>
